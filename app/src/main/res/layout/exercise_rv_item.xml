<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/back_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/idExerciseLAV"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@color/back_color"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_toStartOf="@id/idIVArrow"
            android:layout_toLeftOf="@id/idIVArrow"
            android:layout_toEndOf="@id/idExerciseLAV"
            android:layout_toRightOf="@id/idExerciseLAV"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idTVExerciseName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:padding="8dp"
                android:text="Exercise Name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idTVExerciseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/abel"
                android:padding="8dp"
                android:text="Time"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/idIVArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_right_arrow"
            android:tint="@color/white" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>